<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <%- include('../includes/flash-messages.ejs') %>
        <form class="product-form" 
        action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>"
        method="POST"
        enctype="multipart/form-data">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text"
                class="<%= errorMessage && errorMessage.includes('title') ? 'invalid' : ''%>"
                name="title" id="title" value = "<% if(editing || hasErrorFields) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file"
                name="image" id="image">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number"
                class="<%= errorMessage && errorMessage.includes('price') ? 'invalid' : ''%>"
                name="price" id="price" step="0.01" value = "<% if(editing || hasErrorFields) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description"
                class="<%= errorMessage && errorMessage.includes('description') ? 'invalid' : ''%>"
                id="description" rows="5"><% if(editing || hasErrorFields) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing) {%>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
            <input type="hidden" name="_csrf" value ="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) {%>Update Product <% } else { %> Add Product <% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>